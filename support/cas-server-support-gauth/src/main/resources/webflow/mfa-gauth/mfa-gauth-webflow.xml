<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <var name="credential" class="org.apereo.cas.gauth.credential.GoogleAuthenticatorTokenCredential" />
    <on-start>
        <evaluate expression="initialFlowSetupAction" />
    </on-start>

    <action-state id="initializeLoginForm">
        <evaluate expression="prepareGoogleAuthenticatorLoginAction" />
        <evaluate expression="initializeLoginAction" />
        <transition on="success" to="accountRegistrationCheck"/>
    </action-state>

    <action-state id="accountRegistrationCheck">
        <evaluate expression="googleAccountCheckRegistrationAction" />
        <transition on="register" to="viewRegistration"/>
        <transition on="confirm" to="viewConfirmRegistration"/>
        <transition on="success" to="viewLoginForm"/>
    </action-state>

    <view-state id="viewConfirmRegistration" view="casGoogleAuthenticatorConfirmRegistrationView">
        <on-entry>
            <set name="viewScope.principal" value="conversationScope.authentication.principal" />
        </on-entry>
        <transition on="register" to="viewRegistration"/>
        <transition on="select" to="viewLoginForm">
            <evaluate expression="googleAccountConfirmSelectionAction" />
        </transition>
    </view-state>

    <view-state id="viewRegistration" view="casGoogleAuthenticatorRegistrationView">
        <on-entry>
            <set name="viewScope.principal" value="conversationScope.authentication.principal" />
            <evaluate expression="googleAccountCreateRegistrationAction" />
        </on-entry>
        <transition on="submit" to="saveRegistration"/>
    </view-state>
    
    <action-state id="saveRegistration">
        <evaluate expression="googleSaveAccountRegistrationAction" />
        <transition on="success" to="accountRegistrationCheck"/>
    </action-state>
    
    <view-state id="viewLoginForm" view="casGoogleAuthenticatorLoginView" model="credential">
        <binder>
            <binding property="token" required="true"/>
            <binding property="accountId" required="true"/>
        </binder>
        <on-entry>
            <set name="viewScope.principal" value="conversationScope.authentication.principal" />
        </on-entry>
        <transition on="submit" bind="true" validate="true" to="realSubmit"/>
        <transition on="register" bind="false" validate="false" to="viewRegistration"/>
        <transition on="select" bind="false" validate="false" to="viewConfirmRegistration"/>
    </view-state>

    <action-state id="realSubmit">
        <evaluate expression="validateSelectedRegistrationAction" />
        <evaluate expression="oneTimeTokenAuthenticationWebflowAction" />
        <transition on="success" to="success" />
        <transition on="error" to="viewLoginForm" />
    </action-state>

    <end-state id="success" />

</flow>
